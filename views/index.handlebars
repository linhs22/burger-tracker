  
<div class="container">
  <div class="jumbotron">
    <div class="row justify-content-center">
      <span class="h1 title"><center> Delicous Burgers </center></span>
    </div>
    <img src="../public/assets/css/images/Burger.jpg" alt="burger" height="400" width="225">
    <div class="row">
      <div class="col-6 burger-list">
        <h5 class="card-title">Burgers ready to eat!</h5>
        <div>
          {{#each burgers}}
          {{#unless eaten}}
          {{> burgers/burger-block eaten=true}}
          {{/unless}}
          {{/each}}
        </div>
      </div>
      <div class="col-6 burger-list">
        <h5 class="card-title">Devoured Burgers!</h5>
        <ul>
          {{#each burgers}}
          {{#if eaten}}
          {{> burgers/burger-block eaten=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-4">
          <h1 class="display-4">Add a Burger</h1>
          <form class="create-form">
            <div class="form-group">
              <label for="ca">Burger Name:</label>
              <input type="text" id="ca" name="name">
            </div>
            <div class="form-group">
              <label for="eaten">Have you eaten this burger?</label><br>
              <input type="radio" name="eaten" value="0" checked> Need to Eat
              <input type="radio" name="eaten" value="1"> Devoured!<br>
            </div>
            <button type="submit">Add Burger</button>
          </form>
        </div>
    </div>
  </div>
</div>
    
